<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/skill_iq_Badge"
                android:layout_width="129dp"
                android:layout_height="116dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/skill_iq_trimmed" />

            <TextView
                android:id="@+id/skill_iq_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="8dp"
                android:text="Efe Egbevwie"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintStart_toEndOf="@+id/skill_iq_Badge"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/skill_iq_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/skill_iq_name"
                app:layout_constraintTop_toBottomOf="@+id/skill_iq_name" />

            <TextView
                android:id="@+id/skill_iq_score_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="skill iq score"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@+id/skill_iq_score"
                app:layout_constraintTop_toBottomOf="@+id/skill_iq_name" />

            <TextView
                android:id="@+id/skill_iq_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/skill_iq_score_text"
                app:layout_constraintTop_toBottomOf="@+id/skill_iq_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    
</FrameLayout>
