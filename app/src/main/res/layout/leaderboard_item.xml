<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/learnersBadge"
                android:layout_width="129dp"
                android:layout_height="116dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/top_learner_badge" />

            <TextView
                android:id="@+id/learner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="8dp"
                android:text="Efe Egbevwie"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintStart_toEndOf="@+id/learnersBadge"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/learning_hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@+id/learner_name"
                app:layout_constraintTop_toBottomOf="@+id/learner_name" />

            <TextView
                android:id="@+id/learning_hours_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="learning hours"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@+id/learning_hours"
                app:layout_constraintTop_toBottomOf="@+id/learner_name" />

            <TextView
                android:id="@+id/learner_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/learning_hours_text"
                app:layout_constraintTop_toBottomOf="@+id/learner_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>


